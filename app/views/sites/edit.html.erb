<div class="container-fluid">

  <div class="row pb-3 mt-3 border-bottom">
    <div class="col-md-4">
      <img src="<%= @site.image %>" class="rounded w-100">
    </div>
    <div class="col-md-8">
      <a href="<%= @site.url %>" target="_blank" rel="noopener noreferrer">
        <h5 class="card-title"><%= @site.title %></h5>
      </a>
      <p><%= @site.description%></p>
    </div>
  </div>

  <div class="row">

      <%= form_with(model: @site, local: false) do |f| %>
        <%= f.label :note, class: "" %>
        <%= f.text_area :note, class: "form-control note-control", id: "editor"%>
      <% end%>
    </div>

  </div>

</div>
