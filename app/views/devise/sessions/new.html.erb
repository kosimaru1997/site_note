<div class="container-fluid px-0">
  <div class="row">
    <div class="col-12 px-0">
      <div class="login text-center">

        <h2 class="sign-up-title">Log in</h2>

        <div id="flash_messages">
          <% flash.each do |message_type, message| %>
              <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
          <% end %>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "password" %>
          </div>

          <div class="actions">
            <%= f.button "Log in", class: "new-user-btn login-color mb-3" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <div class="remember-field d-flex">
                <%= f.label :remember_me, style: "margin-bottom: 5px;" %>
                <%= f.check_box :remember_me, style: "
                                                        margin-left: 0px;
                                                        margin-right: 0px;
                                                        margin-bottom: 0px;
                                                        width: 50px;
                                                        height: 20px;
                                                      " %>
              </div>
            </div>
          <% end %>
          
        <% end %>
        
        <div class="sign-up-link">
           <%= render "devise/shared/links" %>
        </div>

        <ul class="bg-bubbles">
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
        </ul>

      </div>
    </div>
  </div>
</div>