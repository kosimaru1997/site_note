<div class="search ms-auto me-2">
  <%= form_with url: sites_search_url, :method => 'get', local: true, class: "form-inline d-flex" do |f| %>
    <%= f.select :option, [ :mix, :title, :note], { required: true }, class: "me-2" %>
    <%= f.select :sort, [:new, :old], { required: true }, class: "me-2" %>
    <%= f.select :tags, @tags.all.map{|tag| [tag.tag_name, tag.id]}, { include_blank: 'tags'}, class: "me-2" %>
    <%= f.search_field :word, class: "form-control pr-3 me-2", placeholder: "検索" %>
    <%= f.submit '検索', name: nil, class: "media-none btn btn-outline-secondary" %>
  <% end %>
</div>